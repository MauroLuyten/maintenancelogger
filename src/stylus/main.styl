/** Stylus Styles */
@require '../../node_modules/vuetify/src/stylus/settings/_colors'
 
$theme := {
  primary: #37464f
  accent: #fbc02d
  secondary: #62727b
  info: $blue.base
  warning: $amber.base
  error: $red.base
  success: $green.base
}

@import '../../node_modules/vuetify/src/stylus/main'

html {
  overflow-y: scroll
}
.dialog {
    margin: 0px
}
.carousel{
    overflow: visible
}
.fixed_fab{
  z-index: 2
}
.toolbar--fixed {
  z-index: 3
}
#vehicle_page_card .card__media{
  overflow: visible
}
.card__media__content .dialog__container {
    position: absolute
    bottom: -28px
    right: 28px
    z-index: 2

}
.datatable th, .datatable td{
    padding: 0 24px
}
tfoot tr{
    height: 48px !important
}
@media(max-width:600px){
    .carousel{
        height:150px
    }
    .stepper--vertical .stepper__content{
        margin: 0;
        padding-left: 0
        padding-right: 0
    }
    .datatable th, .datatable td{
        padding: 0 9px !important
    }
}
@media (min-width:600px){
    #accountmenu, #accountmenu button{
        height: 100%
        margin: 0
        padding: 0
}
    #accountmenu .menu__activator{
        height: 100%
    }
}